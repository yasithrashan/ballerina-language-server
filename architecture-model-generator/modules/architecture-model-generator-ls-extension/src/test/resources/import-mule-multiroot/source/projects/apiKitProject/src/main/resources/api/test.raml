#%RAML 1.0
---
title: Orders API
version: v1
baseUri: http://localhost:8081/api
mediaType: application/json

/orders:
  get:
    description: Retrieve an order by id
    queryParameters:
      id:
        type: string
        required: true
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "id": "12345",
                "status": "CONFIRMED"
              }
